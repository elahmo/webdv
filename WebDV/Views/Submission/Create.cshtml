@model WebDV.Models.Submission
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Upload a submission</title>
</head>
<body>
    <h1>Upload a Submission</h1>
    @if (ViewBag.ErrorMessage is String)
    {
        <span class="error-message">@ViewBag.ErrorMessage</span>
    }
    <form enctype="multipart/form-data" method="post" action="/Submission/Upload/@Model">
        <input type="file" name="SelectedSubmission"/>
        <input type="submit" value="submit" />
    </form>
    <div>
        @Html.ActionLink("Back to home", "Index")
    </div>
</body>
</html>
