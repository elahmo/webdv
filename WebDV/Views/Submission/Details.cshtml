@model WebDV.Models.Submission[]
<div>
    <h2>Submission</h2>
    <hr />        
    @if (Model.Length == 0)
    {
        <h3>No Submission Found</h3>
    }
    else
    {
        <h3>Submission details for @Model[0].submissionID</h3>
        foreach (WebDV.Models.Submission sub in Model)
        {
            if (sub.submissionData != null){
			    <iframe class="submission-iframe" src="/Submission/View/@Model[0].submissionID"></iframe>
            }
            if (sub.feedbackText != null)
            {
                <h3>Grade: @sub.grade</h3>
	            <h3>Feedback:</h3>
				<p>@sub.feedbackText</p>
            }
        }
    }
    <div class="backbtn">
        @Html.ActionLink("Back", "../")
    </div>
</div>